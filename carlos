########## PEGA ARQUIVO CALCULA QTDE DE CARACTERES SELECIONA PALAVRA
qt = 20
qtde = 5
ini = prox = 1
while True:
    print('=' * qt)
    print('JOGO DA FORCA')
    print('=' * qt)
    inicia = int(input('Digite um numero de 1 a 3: '))
    if inicia == 1:
        f = open('list_palavras_01.txt', 'r')
        proxima = str(f.readline(prox - (prox * 10)))
        print(proxima)
        prox = len(proxima)
        f.close()
